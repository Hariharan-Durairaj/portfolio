  }
  h1, h2, h3 {
    color:rgb(0, 0, 0);
  }
  .timeline {
	
    position: relative;
    margin-left: 2rem;
    border-left: 3px solid #2d3e50;
    padding-left: 1.5rem;
  }
  .timeline-item {
	top: 0.3rem;
    position: relative;
    margin-bottom: 2rem;
  }
  .timeline-dot {
    position: absolute;
    left: -2.1rem;
    top: 0.3rem;
    width: 1rem;
    height: 1rem;
    background-color: #2d3e50;
    border-radius: 50%;
  }
  .timeline-date {
    font-weight: bold;
    margin-bottom: 0.3rem;
  }
  .timeline-content {
    margin-left: 0.2rem;
  }
  .project {
    background: none;
    padding: 1rem 0;
